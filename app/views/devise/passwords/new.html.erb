<div class="background1">
<div class="container" >
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
      <div class="card border-0 shadow rounded-3 my-5">
        <div class="card-body p-4 p-sm-5">
          <h5 class="card-title text-center mb-2 fw-bold fs-5 text-uppercase">Forget your password?</h5>
          <br/>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class="mb-4">
              <%= f.email_field :email, autofocus: true, autocomplete: "email",type:"email" , class:"form-control", placeholder:"Enter yout email"%>
            </div>
            <div class="text-center actions">
              <%= f.submit "Send me reset password instructions", class:"btn btn-primary btn-login fw-bold" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
