<div class="background1">
<div class="container" >
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
      <div class="card border-0 shadow rounded-3 my-5">
        <div class="card-body p-4 p-sm-5">
          <h5 class="card-title text-center mb-2 fw-bold fs-5 text-uppercase">Change your password</h5>
          <br/>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <%= f.hidden_field :reset_password_token %>
            <div class="field mb-4">
              <%= f.label :password, "New password" %><br />
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em><br />
              <% end %>
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:"form-control mt-1"%>
            </div>
            <div class="field mb-4">
              <%= f.label :password_confirmation, "Confirm new password" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control mt-1" %>
            </div>
            <div class="text-center actions">
              <%= f.submit "Change my password", class:"btn btn-primary btn-login fw-bold"  %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
