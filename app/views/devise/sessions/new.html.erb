<div class="background1">
  <div class="container" >
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card border-0 shadow rounded-3 my-5">
          <div class="card-body p-4 p-sm-5">
            <h5 class="card-title text-center mb-2 fw-bold fs-5">LOGIN</h5>
            <h6 class="text-center mb-5 fw-normal" style="font-size:12px">Please enter your login and password.</h6>
            <!-- Email input -->
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="mb-3">
                <h6 class="mb-2 fw-normal">Email</h6>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", type:"email",class:"form-control" %>
              </div>
              <!-- Password input -->
              <div class="mb-3">
                <h6 class="mb-2 fw-normal">Password</h6>
                <%= f.password_field :password, autocomplete: "current-password",type:"password",class:"form-control"%>
              </div>
              <!-- Checkbox -->
              <% if devise_mapping.rememberable? %>
                <div class="form-check mb-3">
                  <%= f.check_box :remember_me, class:"form-check-input", type:"checkbox"%>
                  <%= f.label :remember_me, class:"form-check-label" %>
                </div>
              <% end %>
              <%= link_to "Sign up", new_registration_path(resource_name) %><br />
              <div class="text-center mb-4" style="font-size:15px">
                <%= link_to "Forgot your password?", new_password_path(resource_name), class:"link-primary" %>
              </div>
              <!-- Submit button -->
              <div class="text-center actions">
                <%= f.submit "Log in",class:"btn btn-primary btn-login fw-bold"%>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
